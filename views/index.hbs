<section>
    {{!-- this is a loop for handlebars --}}
    <h1>My 3 Favourite Pokemon</h1>
    <div id="pokemons">
    {{#each pokemons}}
    <div class="pokemon-box">
        <div class="pokemon-cont">
        <a href="/{{pokemon_name}}">
        <img src="/images/{{pokemon_img}}" alt="pokemon image">
        </a>
        <h3 class="name">{{pokemon_name}}</h3>
        </div>
    </div>
    {{/each}}
    </div>
</section>

